{
  "manifest_version": 3,
  "name": "YouTube Shelf",
  "version": "1.0.0",
  "description": "Adds a 'shelf' to save YouTube videos with timestamps to watch later.",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "shelf.html",
        "shelf.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "YouTube Shelf",
    "default_popup": "shelf.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}


