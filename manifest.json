{
  "manifest_version": 3,
  "name": "YouTube Shelf",
  "version": "1.0.0",
  "description": "A simple Chrome extension to save YouTube videos to a local, in-browser shelf for later viewing, including the ability to resume from a specific timestamp. This extension was \"vibe coded\" with Gemini.",
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["shelf.html"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "shelf.html",
    "default_title": "Open YouTube Shelf",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-shelf-extension@ritik-ghanshani.com",
      "strict_min_version": "109.0"
    }
  }
}